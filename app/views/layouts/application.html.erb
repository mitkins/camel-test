<!DOCTYPE html>
<html>
<head>
  <title>CamelTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Treebook</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "All Statuses", feed_path %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
            <% if user_signed_in? %>
                <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
                <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <% else %>
                <li><%= link_to "Register", register_path %></li>
                <li><%= link_to "Login", login_path %></li>
            <% end %>
        </ul>
      </div> <!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">
    <div class="camel-template">
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <%= message %>
        </div
      <% end %>

      <%= yield %>
    </div>
  </div>

</body>
</html>
